{
  "name": "Coldbox Ads Extension",
  "description": "Coldbox theme extension for Google AdSense.",
  "authors": [
    {
      "name": "Toshihiro Kanai",
      "email": "i@miruc.co",
      "homepage": "https://miruc.co/",
      "role": "Developer"
    }
  ],
  "license": "GPL-2.0+",
  "require-dev": {
    "squizlabs/php_codesniffer": "> 3.1 | 3.*",
    "wp-cli/wp-cli": "*",
    "phpunit/phpunit": "*",
    "wp-coding-standards/wpcs": "1.*"
  },
  "scripts": {
    "set-config": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs",
    "lint": "vendor/bin/phpcs coldbox-ads-extension.php inc/*.php",
    "lint-fix": "vendor/bin/phpcbf coldbox-ads-extension.php inc/*.php"
  },
  "require": {
    "php": ">=5.6.0",
    "inc2734/wp-github-plugin-updater": "0.1.*"
  },
  "autoload": {
    "psr-4": {
      "updater\\": ""
    }
  }
}
